{
  "extends": ["eslint:recommended", "plugin:import/recommended", "plugin:react/recommended", "plugin:jsx-a11y/recommended", "plugin:prettier/recommended"],
  "plugins": ["react", "import", "jsx-a11y", "prettier"],
  "rules": {
    "react/prop-types": 0,
    "indent": ["error", 2, {"SwitchCase": 1}],
    "linebreak-style": [0, "error", "windows"],
    "quotes": ["error", "double"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "globals": {
    "webix": "writable"
  }
}
